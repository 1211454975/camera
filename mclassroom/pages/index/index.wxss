.card_title {
  font-size: large;
  font-weight: bold;
}
.purchase_btn {
  background-color: #2c9678;
  /* background-color: #2775b6; */
  color: white;
  padding: 5rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  border-radius: 30rpx;
  width:60px;
  text-align: center;
  position: absolute;
  top: 30px;
  right: 0px;
}

/* tab栏 */
.van-tab--active {
  font-weight: bold !important;
  /* font-size: 17px !important; */
}

/* 分隔符 */
.divider {
  background-color: #ccc;
  opacity: 0.3; 
  height: 10px;
  margin-top: 10px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.card-menu{
  display: flex;
  justify-content:center;
  flex-wrap: wrap;
  margin: 10px 10px;
}
.card-menu-item{
  margin:5px 10px;
  padding:10px 10px;
  border-radius:15px;
  display:flex;
  justify-content: space-between;
  align-items:center;
  background-color: #E7EAF7;
}